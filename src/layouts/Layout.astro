---
type Props = {
  frontmatter: {
    title: string;
  };
};

const { title } = Astro.props.frontmatter;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/sakura.css/css/sakura.css"
      type="text/css"
    />
  </head>
  <body>
    <article>
      <slot />
    </article>
  </body>
</html>

<style is:global>
  article {
    background-color: white;
    box-shadow: 0px 8px 16px -2px rgba(10, 10, 10, 0.1),
      0px 0px 0px 1px rgba(10, 10, 10, 0.02);
    padding: 4px 32px;
  }

  h1 {
    font-size: 2em;
  }

  h2 {
    font-size: 1em;
    color: #707070;
  }

  h3 {
    font-size: 1.4em;
  }

  h4 {
    font-size: 1.1em;
    text-decoration: underline;
  }

  p {
  }

  li {
    margin: 0px;
  }
</style>
